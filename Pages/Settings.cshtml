@page
@model SettingsModel

@{
  Layout = "~/Pages/Shared/_Layout.cshtml";
}

<head>
    <title>ReHUD | Settings</title>

    <link rel="stylesheet" href="~/css/settings.css" asp-append-version="true" />

    <script src="~/dist/settings-bundle.js" asp-append-version="true"></script>
</head>


<div class="tab">
    <button class="tablinks active" id="general-tablink">General</button>
    <button class="tablinks" id="layout-tablink">Layout</button>
</div>

<div id="general-tab" class="tabcontent active">
    <div class="setting" id="speed-units-setting">
        <label>Speed Units</label>
        <button id="speed-units-kmh" class="selected">km/h</button>
        <button id="speed-units-mph">mp/h</button>
    </div>

    <div class="setting" id="pressure-units-setting">
        <label>Pressure Units</label>
        <button id="pressure-units-kpa" class="selected">kPa</button>
        <button id="pressure-units-psi">psi</button>
    </div>


    <div class="setting" id="radar-range-setting">
        <label>Radar Range (m)</label>
        <input type="range" min="0" max="30" value="12" step="1" class="slider" id="radar-range">
        <input type="number" min="0" max="30" value="12" step="1" id="radar-range-text">
    </div>

    <div class="setting" id="radar-beep-setting">
        <label>Radar Beep Volume</label>
        <input type="range" min="0" max="3" value="1" step="0.01" class="slider" id="radar-beep-volume">
        <input type="number" min="0" max="3" value="1" step="0.01" id="radar-beep-volume-text">
    </div>

    <div class="setting" id="check-for-updates-setting">
        <label>Check for Updates</label>
        <div class="switch">
            <input type="checkbox" id="check-for-updates" class="switch__input" checked>
            <label for="check-for-updates" class="switch__label"></label>
        </div>
    </div>
</div>

<div id="layout-tab" class="tabcontent">
    <div class="setting" id="layout-setting">
        <button id="edit-layout">Edit</button>
        <button id="cancel-reset-layout">Reset</button>
    </div>

    <div id="element-toggles"></div>
</div>



<button id="show-log-file">Show Log File</button>
